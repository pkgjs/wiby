#!/usr/bin/env node

'use strict'

require('dotenv').config()

const chalk = require('chalk')
const yargs = require('yargs')

yargs
  .commandDir('./commands')
  .demandCommand()
  .help()
  .strict()
  .fail((msg, err, yargs) => {

    if (err) {
      console.error(err);
    }

    if (msg) {
      console.error(chalk.red.bold(msg));
      console.error();
    }

    if (!err || err.showHelp) {
      yargs.showHelp();
    }

    process.exit(1);
  })
  .parse()
